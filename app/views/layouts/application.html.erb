<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
      <div class="container">
        <a class="navbar-brand" href="/"><span>naganocake<span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if customer_signed_in? %>
      <li>
        <%= link_to customers_path(current_customer.id), class: 'nav-link text-light' do %>
        マイページ
        <% end %>
      </li>
      <li>
        <%= link_to items_path, class: 'nav-link text-light' do %>
        商品一覧
        <% end %>
      </li>
      <li>
        <%= link_to cart_items_path, class: 'nav-link text-light' do %>
         カート
        <% end %>
      </li>
      <li>
        <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
        ログアウト
        <% end %>
      </li>
      <% elsif admin_signed_in? %>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
        商品一覧
        <% end %>
      </li>
      <li>
        <%= link_to admin_customers_path, class: 'nav-link text-light' do %>
        会員一覧
        <% end %>
      </li>
      <li>
        <%= link_to admin_path, class: 'nav-link text-light' do %>
         注文履歴一覧
        <% end %>
      </li>
      <li>
        <%= link_to admin_genres_path, class: 'nav-link text-light' do %>
         ジャンル一覧
        <% end %>
      </li>
      <li>
        <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
        ログアウト
        <% end %>
      </li>
    <% else %>
      <li>
      <%= link_to about_path, class: 'nav-link text-light' do %>
        About
        <% end %>
      </li>
      <li>
        <%= link_to items_path, class: 'nav-link text-light' do %>
        商品一覧
        <% end %>
      </li>
      <li>
        <%= link_to new_customer_registration_path, class: 'nav-link text-light' do %>
        新規登録
        <% end %>
      </li>
      <li>
        <%= link_to new_customer_session_path, class: 'nav-link text-light' do %>
        ログイン
        <% end %>
      </li>
    <% end %>
        </ul>
        </div>
      </div>
      <%= form_tag(search_items_path,:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
        <% end %>
        <i class="far fa-search"></i>
    </nav>
    </header>
    <%= yield %>
    <footer>
      <div class= "container mt-5">
        <div class= "row">
          <div class= "mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
