<h5>ジャンル一覧・追加</h5>
</br>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<label>ジャンル名</label><%= f.text_field :name %>
<%= f.submit "新規登録", class: "btn btn-success" %></br>
<% end %>

<div class= "col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thread>
          <tbody>
              <% @genres.each do |genre| %>
              <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
              </tr>
              <% end %>
          </tbody>
        </table>