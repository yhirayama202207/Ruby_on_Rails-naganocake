    <div class= "col-md-8 offset-md-1">
        <h2>会員一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
              <th colspan="4"></th>
            </tr>
          </thread>
          <tbody>
              <% @customers.each do |customer| %>
              <tr>
              <td>
                <%= customer.id %>
              </td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.name %>
                <% end %>
              </td>
              <td>
                <%= customer.email %>
              </td>
              <td>
                <% if customer.is_deleted %>
                  <label class="text-secondary">退会</label>
                <% else %>
                  <label class="text-secondary">有効</label>
                <% end %>
              </td>

              </tr>
              <% end %>
          </tbody>
        </table>

        <%= paginate @customers %>