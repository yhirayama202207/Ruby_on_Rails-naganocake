<h2>商品編集画面 views/admin/items/edit</h2>

<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
            <label>商品画像</label>
            <%= f.file_field :image, accept: "image/*" %>
            <%= f.submit 'ファイルを選択' %></br>
            <label>商品名</label><%= f.text_field :name, autofocus: true, id:"inputname", placeholder:"" %></br>
            <label>商品説明</label><%= f.text_area :introduction, autofocus: true, id:"inputintroduction" %></br>
            <label>ジャンル</label><%= f.select :genres, [["選択肢1", "ジャンル名"], ["選択肢2", "ジャンル名"], ["選択肢3", "ジャンル名"], ["選択肢4", "ジャンル名"]], include_blank: "--選択して下さい--" %></br>
            <label>税抜価格</label><%= f.text_field :price, autofocus: true, id:"inputprice", placeholder:"" %>円</br>
            <label>販売ステータス</label>
            <%= form_with(model: @item, local: true) do |form| %>
            <%= form.radio_button :is_active, :true %>
            <%= form.label :is_active, "販売中", {value: :true, checked: true, style: "display: inline-block;"} %>
            <%= form.radio_button :is_active, :false %>
            <%= form.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          <% end %>