<h2>商品編集画面 views/admin/items/edit</h2>

<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %></br>
  <label>商品名</label><%= f.text_field :name, autofocus: true, id:"inputname", placeholder:"" %></br>
  <label>商品説明</label><%= f.text_area :introduction, autofocus: true, id:"inputintroduction" %></br>
  <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください", class: "form-control col-sm-8" %></br>
  <label>税抜価格</label><%= f.text_field :price, autofocus: true, id:"inputprice", placeholder:"" %>円</br>
  <label>販売ステータス</label>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "販売中", {value: :true, checked: true, style: "display: inline-block;"} %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
    <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>