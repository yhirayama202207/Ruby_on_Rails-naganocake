<h2>商品詳細</h2>

<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.png', size: "200x200" %>
<% end %>
</br>
<label>商品名</label><%= @item.name %></br>
<label>商品説明</label><%= @item.introduction %></br>
<label>ジャンル</label><%= @item.genre.name %></br>
<label>税抜価格</label><%= @item.price %></br>
<label>販売ステータス</label>
<% if @item.is_active %>
  販売中
<% else %>
  販売停止中
<% end %>
</br>
<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>