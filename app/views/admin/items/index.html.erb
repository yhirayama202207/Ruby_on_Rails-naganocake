<h2>商品一覧　admin/items/index</h2>

    <div class= "col-md-8 offset-md-1">
        <h2>商品一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
              <th colspan="5"></th>
            </tr>
          </thread>
          <tbody>
              <% @items.each do |item| %>
              <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.genre_id %>
              </td>
              <td>
                <%= item.is_active %>
              </td>

              </tr>
              <% end %>
          </tbody>
        </table>

        <%= paginate @items %>