<h5><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</h5>

    <div class= "col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
              <th colspan="3"></th>
            </tr>
          </thread>
          <tbody>
              <% @orders.each do |order| %>
              <tr>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at %>
                <% end %>
              </td>
              <td>
                <% @sum = 0 %>
                <% order.order_details.each do |detail|%>
                <% @sum += detail.amount %>
                <% end %>
                <%= @sum %>
              </td>
              <td>
                <%= order.status_i18n %>
              </td>

              </tr>
              <% end %>
          </tbody>
        </table>

        <%= paginate @orders %>