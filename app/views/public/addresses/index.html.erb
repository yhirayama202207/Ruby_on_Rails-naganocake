<h2>配送先登録/一覧画面 views/public/addresses/index.html.erb</h2>

<h2>配送先登録／一覧</h2>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<label>郵便番号(ハイフンなし)</label><%= f.text_field :postal_code %></br>
<label>住所</label><%= f.text_field :addresses %></br>
<label>宛名</label><%= f.text_field :name %>
<%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

    <div class= "col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
              <th colspan="4"></th>
            </tr>
          </thread>
          <tbody>
              <% @addresses.each do |address| %>
              <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する", addresses_path(@address.id), class: "btn btn-success" %>
                <%= link_to "削除する", addresses_path(@address.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
              </td>

              </tr>
              <% end %>
          </tbody>
        </table>