<h2>顧客の登録情報編集画面 views/public/customers/edit.html.erb</h2>

<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_path(@customer.id), method: :patch do |f| %>
            <label>氏名</label>
            <%= f.text_field :last_name, autofocus: true, id:"inputlast_name", placeholder:"" %>
            <%= f.text_field :first_name, autofocus: true, id:"inputfirst_name", placeholder:"" %></br>
            <label>フリガナ</label>
            <%= f.text_field :last_name_kana, autofocus: true, id:"inputlast_name_kana", placeholder:"" %>
            <%= f.text_field :first_name_kana, autofocus: true, id:"inputfirst_name_kana", placeholder:"" %></br>
            <label>郵便番号</label>
            <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code", placeholder:"" %>
            <label>住所</label>
            <%= f.text_field :address, autofocus: true, id:"inputaddress", placeholder:"" %>
            <label>電話番号</label>
            <%= f.text_field :telephone_number, autofocus: true, id:"inputtelephone_number", placeholder:"" %>
            <label>メールアドレス</label>
            <%= f.text_field :email, autofocus: true, id:"inputemail", placeholder:"" %>
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            <%= link_to "退会する", customers_unsubscribe_confirm_path(@customer.id), class: "btn btn-danger" %>
          <% end %>