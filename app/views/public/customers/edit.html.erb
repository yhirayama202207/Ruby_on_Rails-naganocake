<h5>会員情報編集</h5>
</br>
<%= form_with model: @customer, url: customer_update_path, method: :patch do |f| %>
    &emsp;&emsp;&emsp;
    <label>氏名</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
        <%= f.text_field :last_name, autofocus: true, id:"inputlast_name", placeholder:"" %>&emsp;
        <%= f.text_field :first_name, autofocus: true, id:"inputfirst_name", placeholder:"" %></br>
    &emsp;&emsp;&emsp;
    <label>フリガナ</label>&emsp;&emsp;&emsp;&emsp;&emsp;
        <%= f.text_field :last_name_kana, autofocus: true, id:"inputlast_name_kana", placeholder:"" %>&emsp;
        <%= f.text_field :first_name_kana, autofocus: true, id:"inputfirst_name_kana", placeholder:"" %></br>
    &emsp;&emsp;&emsp;
    <label>郵便番号</label>&emsp;&emsp;&emsp;&emsp;&emsp;
        <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code", placeholder:"" %></br>
    &emsp;&emsp;&emsp;
    <label>住所</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
        <%= f.text_field :address, autofocus: true, id:"inputaddress", placeholder:"" %></br>
    &emsp;&emsp;&emsp;
    <label>電話番号</label>&emsp;&emsp;&emsp;&emsp;&emsp;
        <%= f.text_field :telephone_number, autofocus: true, id:"inputtelephone_number", placeholder:"" %></br>
    &emsp;&emsp;&emsp;
    <label>メールアドレス</label>&emsp;&emsp;
        <%= f.text_field :email, autofocus: true, id:"inputemail", placeholder:"" %></br>
    &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    &emsp;&emsp;&emsp;&emsp;&emsp;
    <%= link_to "退会する", customers_unsubscribe_confirm_path, class: "btn btn-danger" %>
<% end %>