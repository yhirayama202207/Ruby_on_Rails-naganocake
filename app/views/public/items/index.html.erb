<h2>商品一覧（全X件）</h2>

<div class= "col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ジャンル検索</th>
              <th colspan="1"></th>
            </tr>
          </thread>
          <tbody>
              <% @genres.each do |genre| %>
              <tr>
              <td><%= link_to genre.name, edit_admin_genre_path(genre.id) %></td>
              </tr>
              <% end %>
          </tbody>
        </table>

<%= @items.each do |item| %>

<% if item.image.attached? %>
  <%= image_tag item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.png', size: "200x200" %>
<% end %>
</br>
<%= item.name %>
</br>
<%= item.price %>円
<% end %>
</br>