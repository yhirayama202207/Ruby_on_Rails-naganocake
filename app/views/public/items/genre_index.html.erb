<div class= "row">
<div class= "col-3">
  <table class="table table-hover table-bordered table-inverse">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thread>
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
        <td><%= link_to genre.name, items_genre_index_path(genre.id) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>

<div class= "col-8">
<h5><%= @genre.name %>一覧（全<%= @genre_items.count %>件）</h5>

<div class= "row">
<% @items.each do |item| %>
<div class= "col-3">

<%= link_to items_show_path(item.id) do %>
<% if item.image.attached? %>
  <%= image_tag item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.png', size: "200x200" %>
<% end %>
<% end %>
<%= item.name %>
</br>
<%= item.with_tax_price %>円
</div>
<% end %>
</div>
</div>
</div>
</div>