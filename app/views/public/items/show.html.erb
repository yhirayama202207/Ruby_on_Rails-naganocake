<h2>商品詳細画面 views/public/items/show.html.erb</h2>

<div class= "col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ジャンル検索</th>
        <th colspan="1"></th>
      </tr>
    </thread>
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
        <td><%= link_to genre.name, edit_admin_genre_path(genre.id) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>

<%= form_with model: @item, url: cart_items_path, method: :post do |f| %>
<%= f.hidden_field :name, :value => @item.name %>
<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.png', size: "200x200" %>
<% end %>
</br>
<h4><%= @item.name %></h4>
<%= @item.introduction %></br>
<label>￥</label><%= @item.with_tax_price %>（税込）</br>
<%= f.select :amount, *[1..10], include_blank: "個数を選択" %>
</br>
<%= link_to "カートに入れる", cart_items_path(@item.id), class: "btn btn-success" %>
<% end %>