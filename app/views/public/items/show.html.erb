<div class= "row">
<div class= "col-4 mt-3">
  <table class="table table-hover table-bordered table-inverse">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thread>
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
        <td><%= link_to genre.name, items_genre_index_path(genre.id) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>


<div class= "col-2 mt-3">
<%#= form_with model: @item, url: cart_items_path, method: :post do |f| %>
<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.png', size: "200x200" %>
<% end %>
</div>
<div class= "col-4 mt-3">
<h4><%= @item.name %></h4>
<%= @item.introduction %></br>
<label>￥</label><%= @item.with_tax_price %>（税込）</br>
<%= form_with model: @cart_item, method: :post do |f| %>
<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.select :amount, *[1..10], include_blank: "個数を選択" %>
</br>
<%= f.submit "カートに入れる", class: "btn btn-success" %>
</div>
<% end %>
</div>
</div>
</div>
</div>