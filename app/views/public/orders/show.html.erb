<h5>注文履歴詳細</h5>

<label>注文情報</label>

<table>
          <tbody>
            <tr>
              <th class="table-secondary">注文日</th>
            <td>
              <%= @order.created_at %>
            </td>
            </tr>
            <tr>
              <th class="table-secondary">配送先</th>
            <td>
              <%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
            </tr>
            <tr>
              <th class="table-secondary">支払い方法</th>
            <td>
              <%= @order.payment_method_i18n %>
            </td>
            </tr>
            <tr>
              <th class="table-secondary">ステータス</th>
            <td>
              <%= @order.status_i18n %>
            </td>
            </tr>
          </tbody>
        </table>

<label>請求情報</label>
<table>
          <tbody>
            <tr>
              <th class="table-secondary">商品合計</th>
            <td>
              <%= @total %>
            </td>
            </tr>
            <tr>
              <th class="table-secondary">配送料</th>
            <td>
              <%= @order.shipping_cost %>
            </td>
            </tr>
            <tr>
              <th class="table-secondary">ご請求額</th>
            <td>
              <%= @total + @order.shipping_cost %>
            </td>
            </tr>
          </tbody>
        </table>

<label>注文内容</label>
<table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
              <th colspan="4"></th>
            </tr>
          </thread>
          <tbody>
              <% @order.order_details.each do |order| %>
              <tr>
              <td>
                <%= order.item.name %>
              </td>
              <td>
                <%= order.price %>
              </td>
              <td>
                <%= order.amount %>
              </td>
              <td>
                <%= (order.item.price * order.amount * 1.1).floor %>
              </td>
              </tr>
              <% end %>
          </tbody>
        </table>